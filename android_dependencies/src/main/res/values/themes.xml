<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="color_white">#ffffff</color>
    <color name="color_gray">#cccccc</color>
    <color name="color_dark_gray">#808e95</color>
    <color name="color_light_black">#0e0e0e</color>
    <color name="color_black">#000000</color>
    <color name="color_red">#b00020</color>
    <color name="color_magenta">#c158dc</color>
    <color name="color_blue">#1e88e5</color>

    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.Remember" parent="Base.Theme.Remember"/>

    <!-- all text styles in the app -->
    <style name="Theme.Remember.Text.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.Remember.Text.Accent" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.Remember.Text.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.Remember.Text.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Theme.Remember.Text.Button.Action" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_blue</item>
    </style>

    <style name="Theme.Remember.Text.Button.Action.Destroy" parent="Theme.Remember.Text.Button.Action">
        <item name="android:textColor">@color/color_red</item>
    </style>

    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.Theme.Remember" parent="Base.Theme.MaterialThemeBuilder">
        <!-- primary colors -->
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryVariant">@color/color_gray</item>
        <item name="colorPrimaryDark">@color/color_dark_gray</item>
        <item name="colorOnPrimary">@color/color_black</item>

        <!-- secondary colors -->
        <item name="colorSecondary">@color/color_magenta</item>
        <item name="colorSecondaryVariant">@color/color_magenta</item>
        <item name="colorOnSecondary">@color/color_white</item>

        <!-- surface & bg colors -->
        <item name="colorSurface">@color/color_white</item>
        <item name="colorOnSurface">@color/color_light_black</item>
        <item name="android:colorBackground">@color/color_white</item>
        <item name="colorOnBackground">@color/color_light_black</item>

        <!-- error colors -->
        <item name="colorError">@color/color_red</item>
        <item name="colorOnError">@color/color_white</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Remember.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Remember.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Remember.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Remember.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Remember.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Remember.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Remember.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Remember.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Remember.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Remember.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Remember.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Remember.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Remember.Overline</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Remember.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Remember.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Remember.LargeComponent</item>
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
<!--        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.MyTheme.BottomSheetDialog</item>-->
<!--        <item name="navigationViewStyle">@style/Widget.MyTheme.NavigationView</item>-->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?attr/colorPrimary</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>