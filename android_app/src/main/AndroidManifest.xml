<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.remember">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".MyApplication"
        android:theme="@style/Theme.Remember">

        <activity
            android:name="com.app.feature.hub.MainHubActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.app.feature.topics.TopicsActivity"
            android:theme="@style/Theme.Remember.ActionScreen"/>
        <activity android:name="com.app.feature.topic.add.AddTopicActivity"
            android:theme="@style/Theme.Remember.ActionScreen"/>
        <activity android:name="com.app.feature.topic.edit.EditTopicActivity"
            android:theme="@style/Theme.Remember.ActionScreen"/>
        <activity android:name="com.app.feature.bookmark.edit.EditBookmarkActivity"
            android:theme="@style/Theme.Remember.ActionScreen"/>

        <activity android:name="com.app.feature.preview.PreviewActivity"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Remember.ActionScreen">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/*" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
    </application>

</manifest>