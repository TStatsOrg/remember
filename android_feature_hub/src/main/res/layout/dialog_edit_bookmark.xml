<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_height="match_parent"
    tools:background="@color/black_200">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_dialog_group"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_dialog_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_bookmark_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/main_hub_dialog_edit_button"
            android:textColor="@color/purple_700"
            android:textAllCaps="false"
            android:layout_height="50dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_bookmark_button"
            app:layout_constraintTop_toBottomOf="@id/edit_bookmark_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/main_hub_dialog_delete_button"
            android:textColor="@color/red_600"
            android:textAllCaps="false"
            android:layout_height="50dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_dialog_group"
        app:layout_constraintTop_toBottomOf="@id/top_dialog_group"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:layout_margin="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_button"
            app:layout_constraintTop_toBottomOf="@id/edit_bookmark_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/main_hub_dialog_cancel"
            android:textAllCaps="false"
            android:textColor="@color/purple_700"
            android:layout_height="50dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
