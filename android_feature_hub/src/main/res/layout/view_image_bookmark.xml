<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookmark_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/Theme.Remember.Text.Accent"
        tools:text="Images"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookmark_source"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/bookmark_topic"
        app:layout_constraintTop_toTopOf="@id/bookmark_topic"
        app:layout_constraintBottom_toBottomOf="@id/bookmark_topic"
        android:textAppearance="@style/Theme.Remember.Text.Caption"
        tools:text="Image"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bookmark_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookmark_topic"
        android:scaleType="centerCrop"
        tools:background="@color/color_gray"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookmark_save_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAppearance="@style/Theme.Remember.Text.Overline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookmark_image"
        tools:text="Apr 2020"/>

</androidx.constraintlayout.widget.ConstraintLayout>