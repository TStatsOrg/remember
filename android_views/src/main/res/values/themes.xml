<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="color_white">#ffffff</color>
    <color name="color_gray">#eeeeee</color>
    <color name="color_mid_gray">#d0d0d0</color>
    <color name="color_dark_gray">#808e95</color>
    <color name="color_black">#0D1B1E</color>
    <color name="color_accent">#384EAF</color>
    <color name="color_red">#b00020</color>
    <color name="color_highlight">#FFDB2C</color>

    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.Remember" parent="Base.Theme.Remember"/>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="Theme.Remember.Launcher" parent="Theme.Remember">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <!-- all text styles in the app -->
    <style name="Theme.Remember.Text.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.Remember.Text.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.Remember.Text.Accent" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.Remember.Text.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_dark_gray</item>
    </style>

    <style name="Theme.Remember.Text.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/color_mid_gray</item>
    </style>

    <style name="Theme.Remember.Text.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/color_dark_gray</item>
    </style>

<!--    <style name="Theme.Remember.Button" parent="TextAppearance.MaterialComponents.Button">-->
<!--    </style>-->

    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.Theme.Remember" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- primary colors -->
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryVariant">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorOnPrimary">@color/color_dark_gray</item>

        <!-- secondary colors -->
        <item name="colorSecondary">@color/color_accent</item>
        <item name="colorSecondaryVariant">@color/color_accent</item>
        <item name="colorOnSecondary">@color/color_white</item>

        <!-- surface & bg colors -->
        <item name="colorSurface">@color/color_white</item>
        <item name="colorOnSurface">@color/color_black</item>
        <item name="android:colorBackground">@color/color_white</item>
        <item name="colorOnBackground">@color/color_black</item>

        <!-- error colors -->
        <item name="colorError">@color/color_red</item>
        <item name="colorOnError">@color/color_white</item>

        <!-- general android stuff -->
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorPrimary</item>
<!--        <item name="android:navigationBarColor" tools:ignore="NewApi">?attr/colorPrimary</item>-->
<!--        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorPrimary</item>-->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
<!--        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>-->
        <item name="windowActionModeOverlay">true</item>

        <item name="android:editTextColor">@color/color_black</item>
        <item name="android:textColorHint">@color/color_mid_gray</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/Theme.Remember.Text.Title</item>
        <item name="textAppearanceHeadline2">@style/Theme.Remember.Text.Title</item>
        <item name="textAppearanceHeadline3">@style/Theme.Remember.Text.Title</item>
        <item name="textAppearanceHeadline4">@style/Theme.Remember.Text.Title</item>
        <item name="textAppearanceHeadline5">@style/Theme.Remember.Text.Title</item>
        <item name="textAppearanceHeadline6">@style/Theme.Remember.Text.Title</item>
        <item name="textAppearanceSubtitle1">@style/Theme.Remember.Text.Subtitle</item>
        <item name="textAppearanceSubtitle2">@style/Theme.Remember.Text.Accent</item>
        <item name="textAppearanceBody1">@style/Theme.Remember.Text.Body1</item>
        <item name="textAppearanceBody2">@style/Theme.Remember.Text.Body1</item>
<!--        <item name="textAppearanceButton">@style/Theme.Remember.Button</item>-->
        <item name="textAppearanceCaption">@style/Theme.Remember.Text.Caption</item>
        <item name="textAppearanceOverline">@style/Theme.Remember.Text.Overline</item>
<!--        <item name="textAppearanceLargePopupMenu">@style/Theme.Remember.Text.Button.Action</item>-->
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Remember.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Remember.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Remember.LargeComponent</item>
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
<!--        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.MyTheme.BottomSheetDialog</item>-->
<!--        <item name="navigationViewStyle">@style/Widget.MyTheme.NavigationView</item>-->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>
</resources>